package mjs;

import java.util.Scanner;

public class Mjs {

	public static void main(String[] args) {
        //숫자 입력 받아서 홀인지 짝인지를 출력하는 조건문
		//(나머지 연산자(%)를 이용)
		Scanner sc = new Scanner(System.in);
	    System.out.println("숫자를 입력하자");
	    int num = sc.nextInt();
	    
	    if (num%2==0)
	    	System.out.println("짝수");
	    else 
	    	System.out.println("홀수");
	}

}
